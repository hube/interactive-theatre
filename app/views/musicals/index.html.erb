<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='page-header'>
        <h1>Musicals</h1>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <%= form_tag musicals_path, method: :get, class: 'form-inline' do %>
        <div class="form-group">
          <%= text_field_tag :q, params[:q], class: 'form-control' %>
        </div>
        <%= submit_tag 'Search Musicals', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Title</th>
            <th>Songs</th>
          </tr>
        </thead>
        <tbody>
          <% @musicals.each do |musical| %>
            <tr>
              <td><%= link_to(musical.title, musical) %></td>
              <td><%= musical.songs.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
